<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">WebDevTools.eu</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="guidGenerator">
                <span class="oi oi-plus" aria-hidden="true"></span> Guid generator
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="stringLength">
                <span class="oi oi-calculator" aria-hidden="true"></span> String length calculator
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="jsonBeautifier">
                <span class="oi oi-list-rich" aria-hidden="true"></span> JSON beautifier
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="imageToBase64">
                <span class="oi oi-image" aria-hidden="true"></span> Image to Base64
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="textReplacer">
                <span class="oi oi-text" aria-hidden="true"></span> Text replacer
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
